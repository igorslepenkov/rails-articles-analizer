<div class='w-100 d-flex flex-column justify-content-center align-items-center'>
  <h1 class='text-primary h1'>All analized articles:</h1>
  <% if @articles.empty? %>
    <h2 class='text-info h2'>Sorry, there is nothing to display at the moment</h2>
  <% else %>
    <table class='w-75 table text-center mt-3'>
      <thead>
        <tr>
          <th scope='col'>#</th>
          <th scope='col'>Title</th>
          <th scope='col'>Service</th>
          <th scope='col'>Link</th>
          <th scope='col'>Comments</th>
          <th scope='col'>Rating</th>
          <th scope='col'>Impact</th>
        </tr>
      </thead>
      <tbody>
        <% @articles.each_with_index do |article, idx| %>
          <tr>
            <td scope='row'> <%= idx + 1 %> </td>
            <td> <%= article.title %> </td>
            <td> <%= URI(article.url).host %> </td>
            <td> <%= link_to 'URL', article.url %> </td>
            <td> <%= link_to 'Comments', comments_article_path(article) %></td>
            <td> <%= article.rating %> </td>
            <td> <%= article.impact %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
